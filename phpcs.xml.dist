<?xml version="1.0"?>
<ruleset name="410 for WordPress">
    <description>Code style rules for the 410 for WordPress plugin.</description>

    <!-- Tell PHPCS what to scan -->
    <file>wp-410</file>

    <!-- Ignore noise if it ever appears -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/.github/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Base WordPress rules -->
    <rule ref="WordPress"/>
    <rule ref="WordPress-Extra"/>

    <!-- PHP version targeting (optional, tweak as needed) -->
    <config name="testVersion" value="7.4-8.3"/>
</ruleset>
